<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if flash.any? %>
      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <section>
      <p>
      <%= link_to "Home", "/" %>
      <% if session[:user_id] %>
        <%= link_to "log out", '/login', method: :delete %>
      <% else %>
        <%= link_to " Register", "/register" %> |
        <%= link_to " Log In", "/login" %>
      <% end %>
      </p>
      <h1 align="center">Viewing Party Light</h1>
    </section>

    <%= yield %>
  </body>
</html>
